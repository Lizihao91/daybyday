<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@drawable/touch_bg"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="5dp"
                android:id="@+id/iv_ic_item"
                android:background="@mipmap/launch_icon"
                android:layout_width="18dp"
                android:layout_height="18dp" />

            <TextView
                android:text="12345678"
                android:id="@+id/tv_title"
                android:textStyle="bold"
                android:singleLine="true"
                android:typeface="monospace"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_ic_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_sync"
                android:layout_alignParentRight="true"
                android:src="@drawable/not_sync"
                android:scaleType="centerInside"
                android:layout_width="35dp"
                android:layout_height="18dp" />
        </RelativeLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_content"
            android:text="222222222"
            android:textSize="12dp"
            android:singleLine="true"
            android:textColor="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_date"
                android:text="2016.08.08 17:30"
                android:textSize="12dp"
                android:textColor="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_size"
                android:text="180kb"
                android:paddingLeft="20dp"
                android:textSize="12dp"
                android:textColor="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <View style="@style/bg_line" />
</LinearLayout>